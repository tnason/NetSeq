#:kivy 1.0

<MyWidget>:
    size_hint: .9, .9
    pos_hint: {'center_x': .5, 'center_y': .5}
    orientation: 'horizontal'
    spacing: 5
    padding: 5

    TabbedPanel:
        size_hint: .3, 1
        id: tabs
        tab_width: 50
        default_tab_content: tab1_content
        default_tab_text: "M"

        Button:
            id: tab1_content
            text: "Do music stuff!"

        Button:
            id: tab2_content
            text: "Do network stuff!"

        Button:
            id: tab3_content
            text: "Do general stuff!"

        TabbedPanelHeader:
            id: network_tab
            text: 'N'
            content: tab2_content
        TabbedPanelHeader:
            id: general_tab
            text: 'G'
            content: tab3_content

    BoxLayout:
        orientation: 'vertical'
    
        AnchorLayout:
            size_hint: 1, .75
            id: notes_layout

        AnchorLayout:
            size_hint: 1, .15
            id: play_layout

